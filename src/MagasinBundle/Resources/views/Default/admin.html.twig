<head>

    <meta charset="UTF-8">

    <title>CodePen - Login Form</title>

    <link rel="stylesheet" href="bundles/css/style.css" media="screen" type="text/css" />

</head>

{% block stylesheets %}
<style type="text/css">

    .alert-danger {
    color: #a94442;
    background-color: #f2dede;
    border-color: #ebccd1;
    }
    .alert {
    padding: 15px;
    margin-bottom: 20px;
    border: 1px solid transparent;
    border-radius: 4px;
    }
    body {
        background-image:url("{{ asset('bundles/images/backgroundLogin3.jpg')}}");
        background-size: cover;
    }
    </style>
{% endblock %}

{% block body %}

    <span href="#" class="button" id="toggle-login">Welcome !</span>

    <div id="login">
        <div id="triangle"></div>
        <h1>Log in</h1>
        <form name="f" method="POST" action="/admin">
            <input type="text" name="Pseudo" placeholder="Username" />
            <input type="password" name="Password" placeholder="Password" />

            {% if error is defined %}
                <div class="alert alert-danger" >
                    <strong>Erreur !</strong> {{ error }}
                </div>
            {% endif %}
            {% if name is defined %}
                <div class="alert alert-danger" >
                    <strong>Erreur !</strong> {{ name }}
                </div>
            {% endif %}

            <input type="submit" value="Log in" />
        </form>
    </div>

    <script src='http://codepen.io/assets/libs/fullpage/jquery.js'></script>

    <script src="js/index.js"></script>

{% endblock %}
